<span id="piwik-playcount" class="discreet" style="display:none; "><span class="views"></span> views</span>

<script>

function getPlayCount() {
    jq.ajax({
        url: location.href.split('/view')[0] + '/@@playcount',
        type: "GET",
        dataType: "json",
        success: function(data) {
            if (data[0] > 0) {
                jq('#piwik-playcount span.views').html(data[0]);
                jq('#piwik-playcount').fadeIn();
            }
        },
        error: function(){//alert('error!');
        }
    });
}

jq(window).load(function() {getPlayCount(); });

jq(function () {    
    jq(window).load(function() {
        $('video').mediaelementplayer().bind('play.onstart',function(){ 
            piwikTracker.trackLink(location.href.split('/view')[0],'link');
            $('video').mediaelementplayer().unbind('play.onstart'); //unbind after we click play, so we count each video view one time
            getPlayCount();
        });    
      
               
    });
});

</script>
